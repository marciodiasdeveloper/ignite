    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary:": "Create category",
                "description": "Create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": { 
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "example": {
                                        "name": "category name sample",
                                        "description": "category description sample"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            }, // post

            "get": {
                "tag": ["Category"],
                "summary": "List all categories",
                "description": "List all categories",
                "response": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },

        }
    }
}